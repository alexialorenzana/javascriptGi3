#include <stdio.h>

int romanCharToInt(char userChar) {
    if (userChar == 'I') {
        return 1;
    } else if (userChar == 'V') {
        return 5;
    } else if (userChar == 'X') {
        return 10;
    } else if (userChar == 'L') {
        return 50;
    } else if (userChar == 'C') {
        return 100;
    } else if (userChar == 'D') {
        return 500;
    } else if (userChar == 'M') {
        return 1000;
    } else {
        return 0; // In case of invalid input
    }
}

int main() {
    char userInput[100];  // To store the input Roman numeral string
    int total = 0;
    int i = 0;
    
    printf("Enter a Roman numeral: ");
    scanf("%s", userInput);  // Read the string input

    // Loop through each character in the string
    while (userInput[i] != '\0') {
        total += romanCharToInt(userInput[i]);
        i++;  // Move to the next character
    }

    printf("The integer value is: %d\n", total);

    return 0;
}